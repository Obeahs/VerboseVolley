<h1>Your Orders</h1>

<% if @orders.empty? %>
  <p>You have no orders yet.</p>
<% else %>
  <table class="orders-table">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Date</th>
        <th>Status</th>
        <th>Total Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.created_at.strftime("%Y-%m-%d") %></td>
          <td><%= order.status %></td>
          <td>$<%= order.total_price %></td>
          <td><%= link_to 'View Order', order_path(order), class: 'btn btn-secondary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
