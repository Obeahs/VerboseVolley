<h1>New Order</h1>

<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :province_id, "Province for Pickup" %><br>
    <% if @provinces.present? %>
      <%= f.collection_select :province_id, @provinces, :id, :label_method, {}, { onchange: "this.form.submit();" } %>
    <% else %>
      <p>No provinces available</p>
    <% end %>
  </div>

  <h2>Your Cart</h2>
  <% if @cart.present? && @cart.any? %>
    <table>
      <thead>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% @cart.each do |id, quantity| %>
          <% product = Product.find(id) %>
          <tr>
            <td><%= product.product_name %></td>
            <td><%= quantity %></td>
            <td>$<%= product.price %></td>
            <td>$<%= product.price * quantity %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <p>Subtotal: $<%= @cart.sum { |id, quantity| Product.find(id).price * quantity } %></p>
    <% if @order.province_id.present? %>
      <p>Taxes: $<%= calculate_taxes(@cart.sum { |id, quantity| Product.find(id).price * quantity }, @order.province_id) %></p>
      <p>Total Price: $<%= @cart.sum { |id, quantity| Product.find(id).price * quantity } + calculate_taxes(@cart.sum { |id, quantity| Product.find(id).price * quantity }, @order.province_id) %></p>
    <% end %>
  <% else %>
    <p>Your cart is empty.</p>
  <% end %>

  <div class="actions">
    <%= f.submit "Place Order" %>
  </div>
<% end %>
