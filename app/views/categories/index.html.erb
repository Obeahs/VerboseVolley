<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Show Products</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.category_name %></td>
        <td>
          <%= link_to 'Show', category_path(category), class: 'btn btn-info btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
