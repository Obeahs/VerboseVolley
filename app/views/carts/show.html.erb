<h1>Your Shopping Cart</h1>

<% if @cart.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <table class="cart-table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <% quantity = @cart[product.id.to_s] %>
        <tr>
          <td><%= product.product_name %></td>
          <td><%= quantity %></td>
          <td>$<%= product.price %></td>
          <td>$<%= product.price * quantity %></td>
          <td>
            <%= button_to 'Remove', remove_from_cart_path(product.id), method: :delete, class: 'btn btn-secondary' %>
            <%= form_with url: update_cart_path(product.id), method: :patch, local: true do |form| %>
              <%= form.number_field :quantity, value: quantity, min: 1, class: 'cart-quantity-field' %>
              <%= form.submit 'Update', class: 'btn btn-primary' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p class="cart-total">Total Price: $<%= @products.sum { |product| product.price * @cart[product.id.to_s].to_i } %></p>
  <div class="cart-actions">
    <%= link_to 'Checkout', new_order_path, class: 'btn btn-primary' %>
  </div>
<% end %>
