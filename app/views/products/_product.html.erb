<div id="<%= dom_id product %>">
  <article>
    <section>
      <p>
        <strong>Name:</strong>
        <%= product.name %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= product.description %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= number_to_currency(product.price) %>
      </p>
    </section>
  </article>
</div>
