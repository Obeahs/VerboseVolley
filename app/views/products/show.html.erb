<h1><%= @product.product_name %></h1>

<p><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>

<p><strong>Description:</strong> <%= @product.description %></p>

<div class="product-actions">
  <%= button_to 'Add to Cart', add_to_cart_path(@product), method: :post, class: 'btn btn-primary btn-narrow' %>
  <br/>
  <%= link_to 'Back to Products', products_path, class: 'btn btn-secondary' %>
</div>

<% if @product.image.attached? %>
  <div class="product-image">
    <%= image_tag url_for(@product.image), alt: @product.product_name %>
  </div>
<% end %>


