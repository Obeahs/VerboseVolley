<%= form_with(model: @product, local: true) do |f| %>
  <div>
    <%= f.label :product_name %>
    <%= f.text_field :product_name %>
  </div>

  <div>
    <%= f.label :category %>
    <%= f.collection_select :category_id, Category.all, :id, :category_name %>
  </div>

  <div>
    <%= f.label :availability %>
    <%= f.select :availability, [['Available', true], ['Unavailable', false]], { include_blank: true }, { class: 'form-control' } %>
  </div>

  <div>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :on_sale %>
    <%= f.check_box :on_sale %>
  </div>

  <div>
    <%= f.label :new_arrival %>
    <%= f.check_box :new_arrival %>
  </div>

  <div>
    <%= f.label :recently_updated %>
    <%= f.check_box :recently_updated %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
